<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.liang.lelogo.activity.MainActivity">


    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGray" />

    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <RadioButton
            android:checked="true"
            android:id="@+id/rb_home"
            style="@style/MainBottomStyle"
            android:drawableTop="@drawable/mail_sel"
            android:text="微博" />

        <RadioButton
            android:id="@+id/rb_message"
            style="@style/MainBottomStyle"
            android:drawableTop="@drawable/mail_sel"
            android:text="信息" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:background="@drawable/main_plus_sel"
            android:clickable="true"
            android:src="@mipmap/icon_center" />

        <RadioButton
            android:id="@+id/rb_search"
            style="@style/MainBottomStyle"
            android:drawableTop="@drawable/mail_sel"
            android:text="发现" />

        <RadioButton
            android:id="@+id/rb_personal"
            style="@style/MainBottomStyle"
            android:drawableTop="@drawable/mail_sel"
            android:text="我" />

    </RadioGroup>

</LinearLayout>
